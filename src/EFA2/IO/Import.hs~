module Import (module Import) where

import EFA2.Signal.Sequence
import EFA.Signal.Arith
import Text.ParserCombinators.Parsec


type FilePath = String

data Time = [Val]

{-
importModelica :: FilePath -> Record
importModelica
-}

csvRead :: FilePath -> [[String]]
csvRead filePath = do
  text <- readFile filePath
  let csvFile = enBy line eol
  let line = sepBy cell (char ',')    
  let cell = many (noneOf ",\n")    
  let eol = char '\n'    
  let parseCSV input = parse csvFile "(unknown)" input     
  return = parseCSV text   
  
  
csvImport :: FilePath -> ([String], [[Val]])
csvImport path = do 
  text <- readFile path
  let csvlines = lines text 
  let  header =  splitOn ',' $ head lines
  let  vals = map (splitOn ',') $ tail lines     
      
  

